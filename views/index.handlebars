<nav class="navbar navbar-light custom-nav">
    <a class="navbar custom-nav-text" href="/">Eat Da Burger!</a>
</nav>
<div class="container main-content">
    <div class="row">
        <div class="col-md-6">
            <h2>To be Eaten.</h2>
            <ul>
                {{#each burger}}
                {{#unless eaten}}
                <div class="card to-be-eaten">
                    <div class="card-body">
                        {{name}}
                        <button type="submit" data-id={{id}} data-devour="true"
                            class="btn btn-primary eat">Devour</button>
                        <button class="btn btn-primary deleteBtn" data-id={{id}}>X</button>
                    </div>
                </div>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Devoured.</h2>
            <ul>
                {{#each burger}}
                {{#if eaten}}
                <div class="card devoured">
                    <div class="card-body">
                        {{name}}
                        <button type="submit" data-id={{id}} data-devour="false"
                            class="btn btn-primary eat">More?</button>
                        <button class="btn btn-primary deleteBtn" data-id={{id}}>X</button>
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<div class="container add-more">
    <div class="row">
        <h2>More Burgers</h2>
<form class="form-inline" id="create-form">
    <div class="form-group mx-sm-3 mb-2">
        <label for="for" class="sr-only">Burger Name:</label>
        <input type="text" class="form-control" id="add" name="name" placeholder="Burger Name">
    </div>
    <button type="submit" class="btn btn-primary mb-2 custom-btn">Add Burger</button>
</form>
    </div>
</div>


