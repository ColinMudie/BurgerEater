<h1>Eat Da Burger!</h1>

<h2>To be Eaten.</h2>
<ul>
    {{#each burger}}
    {{#unless eaten}}  
        <p>{{name}} <button type="submit" data-id={{id}} data-devour="true" class="eat">Devour</button></p>
        
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured.</h2>
<ul>
    {{#each burger}}
    {{#if eaten}}
    <p id={{id}}>{{name}}</p>
    {{/if}}
    {{/each}}
</ul>

<h2>More Burgers</h2>
<form id="create-form">

    <div class="form-group">
    <label for="add">Burger Name:</label>
    <input type="text" id="add" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>